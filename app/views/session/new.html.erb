<div class="centering-div max-width-24">
  <h1>Log in</h1>
  <%= form_with(url: login_path, scope: :session, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control" %>
    </div>

    <%= hidden_field_tag 'redirect_back', params[:redirect_back] %>

    <%= form.submit "Log in", class: "btn btn-primary" %>
  <% end %>
  <br>
  Don't have an account? <%= link_to "Sign up", controller: 'users', action: 'new', redirect_back: params[:redirect_back] %>
</div>
