.bg-dark
  .max-width-44.mx-auto
    %nav.navbar.navbar-expand-sm.navbar-dark
      .collapse.navbar-collapse
        %ul.navbar-nav.mr-auto
          %li.nav-item
            = link_to "Home", root_path, class: "nav-link"
          %li.nav-item
            = link_to "+Ask", new_question_path, class: "nav-link"
      .collapse.navbar-collapse
        %ul.navbar-nav.ml-auto
          - if logged_in?
            %li.nav-item
              = link_to "My Page", current_user, class: "nav-link"
            %li.nav-item
              = link_to "Log out", session_path(id: current_user.id), method: :delete, class: "nav-link"
          - else
            %li.nav-item
              = link_to "Sign up", new_user_path, class: "nav-link"
            %li.nav-item
              = link_to "Log in", new_session_path, class: "nav-link"
