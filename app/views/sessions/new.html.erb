<h1>Sign in</h1>

<div class="form">
  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <%= f.submit "Log in", class: "btn btn-primary" %>
  <% end %>
</div>
